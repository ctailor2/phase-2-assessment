<div class="container">
  <h1>Login</h1>
  <form action="/login" method="POST">
    <div class="stack-text-inputs">
      <input type="text" name="user[email]" placeholder="Email">
      <input type="password" name="user[password]" placeholder="Password">
      <input type="submit" value="Login">
    </div>
  </form>
  <%= erb :_errors %>
</div>
