<div class="container">
  <h3>Event Details</h3>
  <div class="stack-text-inputs">
    <form id="details" action="/events/<%= @event.id %>" method="POST">
      Name:
      <input type="text" name="event[name]" value="<%= @event.name %>" disabled>
      Location:
      <input type="text" name="event[location]" value="<%= @event.location %>" disabled>
      Starts at:<input type="datetime-local" name="event[starts_at]" value="<%= @event.starts_at.strftime("%Y-%m-%dT%H:%M:%S") %>" disabled>
      Ends at:<input type="datetime-local" name="event[ends_at]" value="<%= @event.starts_at.strftime("%Y-%m-%dT%H:%M:%S") %>" disabled>
      <button type="button" id="cancel-edit">Cancel</button><button id="update" type="submit">Update</button>
      <% if @event.user_id == current_user.id %>
        <button type="button" id="edit">Edit</button>
      <% end %>
    </form>

  </div>
</div>
